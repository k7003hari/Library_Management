payFine(memberId: number): void {
  console.log('Pay fine for member:', memberId);
  // Navigate or open modal
}

checkFine(memberId: number): void {
  console.log('Check fine for member:', memberId);
  // Call API or navigate
}

updateMember(memberId: number): void {
  console.log('Update member:', memberId);
  this.router.navigate(['/updateMember', memberId]);
}

deleteMember(memberId: number): void {
  console.log('Delete member:', memberId);
  if (confirm('Are you sure you want to delete this member?')) {
    this.memberService.deleteMember(memberId).subscribe(
      () => {
        alert('Member deleted successfully!');
        this.loadMembers(); // reload members
      },
      (error) => {
        console.error('Delete failed', error);
        alert('Delete failed. Please try again.');
      }
    );
  }
}


