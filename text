<div class="container mt-4">
  <h2 class="text-center mb-4">Book Library</h2>

  <div *ngIf="role === 'ADMIN'" class="mb-3 text-end">
    <a class="btn btn-primary" routerLink="/addBook">Add New Book</a>
  </div>

  <div class="row">
    <div *ngFor="let book of books" class="col-md-4 mb-4">
      <div class="card shadow p-3 rounded">
        <div class="card-body">
          <h5 class="card-title">{{ book.title }}</h5>
          <p class="card-text">
            <strong>Author:</strong> {{ book.author }}<br>
            <strong>Status:</strong> {{ book.available ? 'Available' : 'Borrowed' }}
          </p>

          <!-- Member options -->
          <div *ngIf="role === 'MEMBER'">
            <button *ngIf="book.available" class="btn btn-success me-2" (click)="borrowBook(book.id)">Borrow</button>
            <button *ngIf="!book.available" class="btn btn-warning" (click)="returnBook(book.id)">Return</button>
          </div>

          <!-- Admin options -->
          <div *ngIf="role === 'ADMIN'">
            <button class="btn btn-info me-2" (click)="updateBook(book.id)">Update</button>
            <button class="btn btn-danger" (click)="deleteBook(book.id)">Delete</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
